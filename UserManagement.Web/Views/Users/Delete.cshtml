@model UserManagement.Web.Models.Users.UserListItemViewModel

<div>

    <h4>Delete User </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.Id</dd>
        <dt>Forename</dt>
        <dd>@Model.Forename</dd>
        <dt>Surname</dt>
        <dd>@Model.Surname</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        <dt>Active</dt>
        <dd>@(Model.IsActive ? "Yes" : "No")</dd>
        <dt>Date of Birth</dt>
        <dd>@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Back to List", "Index")

    @using (Html.BeginForm(new { id = Model.Id }))
    {
        @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </p>
    }
</p>
